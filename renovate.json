{
  "timezone": "Asia/Tokyo",
  "schedule": ["every weekend"],
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "groupName": "devDependencies"
    },
    {
      "groupName": "definitelyTyped",
      "packagePatterns": [
        "^@types/"
      ]
    },
    {
      "updateTypes": ["digest"],
      "enabled": false
    }
  ],
  "semanticCommits": true,
  "labels": ["renovate"],
  "rebaseWhen": "never"
}
